<div class="forms">
<h2>Sign up for conference room scheduler.</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

	  <%= f.input :first_name, required: true, autofocus: true %>
	  <%= f.input :last_name, required: true %>
		<div class="dob">
	  <%= f.input :date_of_birth, required: true, as: :date,:start_year => 1950, :end_year => 2015,:order => [ :day, :month, :year] %>
		</div>
		<div class="color">
	  <%= f.input :favorite_color, required: true, collection: %w[Blue Green Red Orange Yellow Purple White Black] %>
		</div>
		<%= f.input :phone_number, required: true %>
    <%= f.input :email, required: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
    <%= f.input :password_confirmation, required: true, label: 'Confirmation' %>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<br>
</div>